<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdCo.Views.StartRecognitionPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#B3E5FC" Orientation="Vertical">
            <Button x:Name="PlayBtn"
                    Text="Iniciar trayecto"
                    FontSize="1"
                    ContentLayout="Bottom,0"
                    TextColor="#B3E5FC"
                    BackgroundColor="#B3E5FC"
                    BorderColor="#2874A6"
                    BorderWidth="1"
                    ImageSource="play.jpg"
                    Clicked="PlayBtn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>